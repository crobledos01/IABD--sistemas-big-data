<configuration>
  <!-- Con 2 DataNodes, replica=2 es lo ideal -->
  <property>
    <name>dfs.replication</name>
    <value>2</value>
  </property>

  <!-- Rutas locales dentro del contenedor (mapeadas a tu host) -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>file:///opt/hadoop/data/nameNode</value>
  </property>

  <property>
    <name>dfs.datanode.data.dir</name>
    <value>file:///opt/hadoop/data/dataNode</value>
  </property>

  <!-- Para entorno laboratorio -->
  <property>
    <name>dfs.permissions.enabled</name>
    <value>false</value>
  </property>

  <!-- Docker-friendly: evita problemas por checks de hostname/IP -->
  <property>
    <name>dfs.namenode.datanode.registration.ip-hostname-check</name>
    <value>false</value>
  </property>
</configuration>
